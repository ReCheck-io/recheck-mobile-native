<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="io.recheck"
    android-packageName="io.recheck.android"
    ios-CFBundleIdentifier="io.recheck"
    version="1.0.23"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
    <name>ReCheck</name>
    <description>ReCheck - ReCheck's native mobile app.</description>
    <author email="info@recheck.io" href="https://recheck.io">ReCheck Team</author>
    <hook src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" type="after_prepare" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <preference name="Orientation" value="portrait" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#04558a" />

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="19" />
        <icon density="mdpi" src="resources/icon/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="resources/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="resources/icon/android/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="resources/icon/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="resources/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
        <splash density="land-hdpi" src="resources/screen/android/drawable-land-hdpi/screen.png" />
        <splash density="land-ldpi" src="resources/screen/android/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="resources/screen/android/drawable-land-mdpi/screen.png" />
        <splash density="land-xhdpi" src="resources/screen/android/drawable-land-xhdpi/screen.png" />
        <splash density="land-xxhdpi" src="resources/screen/android/drawable-land-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi" src="resources/screen/android/drawable-land-xxxhdpi/screen.png" />
        <splash density="port-hdpi" src="resources/screen/android/drawable-port-hdpi/screen.png" />
        <splash density="port-ldpi" src="resources/screen/android/drawable-port-ldpi/screen.png" />
        <splash density="port-mdpi" src="resources/screen/android/drawable-port-mdpi/screen.png" />
        <splash density="port-xhdpi" src="resources/screen/android/drawable-port-xhdpi/screen.png" />
        <splash density="port-xxhdpi" src="resources/screen/android/drawable-port-xxhdpi/screen.png" />
        <splash density="port-xxxhdpi" src="resources/screen/android/drawable-port-xxxhdpi/screen.png" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="WKWebViewOnly" value="true" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>need camera access to scan QR code</string>
        </edit-config>

        <config-file parent="com.apple.developer.associated-domains" target="*-Debug.plist">
            <array>
                <string>applinks:*.recheck.io</string>
            </array>
        </config-file>
        <config-file parent="com.apple.developer.associated-domains" target="*-Release.plist">
            <array>
                <string>applinks:*.recheck.io</string>
            </array>
        </config-file>

        <icon height="57" src="resources/icon/ios/icon.png" width="57" />
        <icon height="114" src="resources/icon/ios/icon@2x.png" width="114" />
        <icon height="40" src="resources/icon/ios/icon-40.png" width="40" />
        <icon height="80" src="resources/icon/ios/icon-40@2x.png" width="80" />
        <icon height="50" src="resources/icon/ios/icon-50.png" width="50" />
        <icon height="100" src="resources/icon/ios/icon-50@2x.png" width="100" />
        <icon height="120" src="resources/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="resources/icon/ios/icon-60@3x.png" width="180" />
        <icon height="72" src="resources/icon/ios/icon-72.png" width="72" />
        <icon height="144" src="resources/icon/ios/icon-72@2x.png" width="144" />
        <icon height="76" src="resources/icon/ios/icon-76.png" width="76" />
        <icon height="152" src="resources/icon/ios/icon-76@2x.png" width="152" />
        <icon height="167" src="resources/icon/ios/icon-83.5@2x.png" width="167" />
        <icon height="29" src="resources/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="resources/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" src="resources/icon/ios/icon-small@3x.png" width="87" />
        <splash height="480" src="resources/screen/ios/Default~iphone.png" width="320" />
        <splash height="960" src="resources/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="resources/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="resources/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="resources/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="resources/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="resources/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="resources/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" src="resources/screen/ios/Default-736h.png" width="1242" />
    </platform>

    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.2" />
    <plugin name="cordova-plugin-qrscanner" spec="^3.0.1" />
    <plugin name="cordova-plugin-permission" spec="^0.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.3" />
    <plugin name="cordova-plugin-wkwebview-engine" spec="^1.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^6.0.0" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.2" />

    <plugin name="cordova-plugin-firebasex" spec="latest">
        <variable name="FIREBASE_ANALYTICS_COLLECTION_ENABLED" value="false" />
        <variable name="FIREBASE_PERFORMANCE_COLLECTION_ENABLED" value="false" />
        <variable name="FIREBASE_CRASHLYTICS_COLLECTION_ENABLED" value="false" />
    </plugin>

    <plugin name="ionic-plugin-deeplinks" spec="github:byurhanbeyzat/ionic-plugin-deeplinks">
        <variable name="URL_SCHEME" value="myrecheck" />
        <variable name="DEEPLINK_SCHEME" value="https" />
        <variable name="DEEPLINK_HOST" value="*.recheck.io" />
        <variable name="ANDROID_PATH_PREFIX" value="/login/.*" />
        <variable name="DEEPLINK_2_SCHEME" value="https" />
        <variable name="DEEPLINK_2_HOST" value="*.recheck.io" />
        <variable name="ANDROID_2_PATH_PREFIX" value="/exec/.*" />
    </plugin>
</widget>
